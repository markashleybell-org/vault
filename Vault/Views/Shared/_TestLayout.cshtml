<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, height=device-height, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
        <title>@ViewBag.Title</title>
        <link rel="shortcut icon" href="/content/img/favicon.ico" />
        @Styles.Render("~/Content/Css/main")
        @Styles.Render("~/Content/Css/tests")
        @RenderSection("head", false)
    </head>
    <body>
        @RenderSection("tests")
        <div class="container">
            @RenderSection("main")
        </div>
        <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
        @Scripts.Render("~/Content/Js/main")
        <script type="text/javascript">
            $('script[src="/Content/Js/main.js"]').attr('data-cover', '');
            var _BASE_URL = '@(Url.Action("Index", "Main", null))';
        </script>
        @Scripts.Render("~/Content/Js/tests")
        @RenderSection("foot", false)
    </body>
</html>
