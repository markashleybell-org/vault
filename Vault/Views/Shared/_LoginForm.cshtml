@model Vault.Models.LoginViewModel

<div id="login-form-dialog" class="modal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            @using (Html.BeginForm("Login", "Main", FormMethod.Post, new { id = "login-form", @class = "form-horizontal" })) {
            <div class="modal-header">
                <h4 class="modal-title">Log In</h4>
            </div>
            <div class="modal-body">
                <p>Enter your username and master password:</p>
                <div class="form-group">
                    @Html.LabelFor(model => model.Username, new { @class = "col-sm-4 control-label", @for = "VaultUsername" })
                    <div class="col-sm-8">
                        @Html.PasswordFor(model => model.Username, new { @class = "form-control", id = "VaultUsername" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Password, new { @class = "col-sm-4 control-label", @for = "VaultPassword" })
                    <div class="col-sm-8">
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control", id = "VaultPassword" })
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Log In</button>
            </div>
            }
        </div>
    </div>
</div>
