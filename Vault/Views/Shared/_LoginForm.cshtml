@model Vault.Models.LoginViewModel

<div id="login-form-dialog" class="modal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="login-form" asp-action="Login" asp-controller="Home" method="post">
                <div class="modal-header">
                    <h4 class="modal-title">Log In</h4>
                </div>
                <div class="modal-body">
                    <p>Enter your username and master password:</p>
                    <!-- These fake fields are a workaround for Chrome not respecting the autocomplete attribute and autofilling fields with the wrong values... -->
                    <input class="chrome-autocomplete-fake d-none" type="text" name="chromeusername" />
                    <input class="chrome-autocomplete-fake d-none" type="password" name="chromepassword" />
                    <div class="row mb-3">
                        <label asp-for="UN1209" class="col-md-3 col-form-label text-end"></label>
                        <div class="col-md-9">
                            <input asp-for="UN1209" type="password" class="form-control" autocomplete="un1209" />
                        </div>
                    </div>
                    <div class="row">
                        <label asp-for="PW9804" class="col-md-3 col-form-label text-end"></label>
                        <div class="col-md-9">
                            <input asp-for="PW9804" type="password" class="form-control" autocomplete="un1209" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <span class="validation-message"></span>
                    <button type="submit" class="btn btn-primary">Log In</button>
                </div>
            </form>
        </div>
    </div>
</div>
