@model Vault.Models.Credential

<form asp-action="Update" asp-controller="Main" method="post" id="credential-form" class="form-horizontal" autocomplete="off">

    <!-- These fake fields are a workaround for Chrome not respecting the autocomplete attribute and autofilling fields with the wrong values... -->
    <input class="chrome-autocomplete-fake d-none" type="text" name="chromeusername" />
    <input class="chrome-autocomplete-fake d-none" type="password" name="chromepassword" />

    <div class="row mb-3">
        <label asp-for="Description" class="col-md-3 col-form-label text-end"></label>
        <div class="col-md-9">
            <input asp-for="Description" type="text" class="form-control" autocomplete="vault-desc" />
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="Username" class="col-md-3 col-form-label text-end"></label>
        <div class="col-md-9">
            <input asp-for="Username" type="text" class="form-control" autocomplete="vault-un" />
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="Password" class="col-md-3 col-form-label text-end"></label>
        <div class="col-md-5">
            <input asp-for="Password" type="text" class="form-control" autocomplete="vault-pw" />
            <div class="password-strength">
                <div class="progress">
                    <div class="progress-bar" role="progressbar"></div>
                </div>
                <div class="status"></div>
            </div>
        </div>
        <div class="col-md-4">
            <button class="btn btn-outline-secondary generate-password" tabindex="-1">Generate</button>
            <a href="#" class="btn btn-link generate-password-options-toggle" tabindex="-1">Options</a>
        </div>
    </div>

    <div class="row mb-3 generate-password-options d-none">
        <label class="col-md-3 col-form-label text-end">Password Chars</label>
        <div class="col-md-3">
            <input class="form-control generate-password-option" id="len" name="len" value="16" />
            <input asp-for="PwdOptions" type="hidden" />
        </div>
        <div class="col-md-6 d-flex align-items-center">
            <div class="form-check me-3">
                <input class="form-check-input generate-password-option" type="checkbox" id="ucase" name="ucase" value="1" checked>
                <label class="form-check-label" for="ucase">A-Z</label>
            </div>
            <div class="form-check me-3">
                <input class="form-check-input generate-password-option" type="checkbox" id="lcase" name="lcase" value="1" checked>
                <label class="form-check-label" for="lcase">a-z</label>
            </div>
            <div class="form-check me-3">
                <input class="form-check-input generate-password-option" type="checkbox" id="nums" name="nums" value="1" checked>
                <label class="form-check-label" for="nums">0-9</label>
            </div>
            <div class="form-check">
                <input class="form-check-input generate-password-option" type="checkbox" id="symb" name="symb" value="1" checked>
                <label class="form-check-label" for="symb">Symbols</label>
            </div>
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="Url" class="col-md-3 col-form-label text-end"></label>
        <div class="col-md-9">
            <input asp-for="Url" type="text" class="form-control" autocomplete="vault-un" />
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="UserDefined1Label" class="col-md-3 col-form-label text-end"></label>
        <div class="col-md-9">
            <input asp-for="UserDefined1Label" type="text" class="form-control" autocomplete="vault-un" />
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="UserDefined1" class="col-md-3 col-form-label text-end"></label>
        <div class="col-md-9">
            <input asp-for="UserDefined1" type="text" class="form-control" autocomplete="vault-un" />
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="UserDefined2Label" class="col-md-3 col-form-label text-end"></label>
        <div class="col-md-9">
            <input asp-for="UserDefined2Label" type="text" class="form-control" autocomplete="vault-un" />
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="UserDefined2" class="col-md-3 col-form-label text-end"></label>
        <div class="col-md-9">
            <input asp-for="UserDefined2" type="text" class="form-control" autocomplete="vault-un" />
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="Username" class="col-md-3 col-form-label text-end"></label>
        <div class="col-md-9">
            <textarea asp-for="Username" class="form-control" rows="6"></textarea>
        </div>
    </div>

    <input asp-for="CredentialID" type="hidden" />

</form>
