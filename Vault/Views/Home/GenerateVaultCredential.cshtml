@model GenerateVaultCredentialViewModel

@{
    ViewBag.Title = "Generate Credentials";
}

@section main {

    <div id="generate-form-dialog" class="modal">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <form id="generate-form" action="" method="post" class="form-horizontal">
                    <div class="modal-header">
                        <h4 class="modal-title">Generate Credentials</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="UserID" class="col-sm-8 control-label">User ID</label>
                            <div class="col-sm-16">
                                <input type="text" size="40" id="UserID" name="UserID" value="@Model.UserID" class="form-control" />
                            </div>
                        </div>
                        <p>Enter a username and password to hash:</p>
                        <div class="form-group">
                            <label for="Username" class="col-sm-8 control-label">Username</label>
                            <div class="col-sm-16">
                                <input type="text" size="40" id="Username" name="Username" value="" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Password" class="col-sm-8 control-label">Password</label>
                            <div class="col-sm-16">
                                <input type="text" size="40" id="Password" name="Password" value="" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="HashedUsername" class="col-sm-8 control-label">Hashed Username</label>
                            <div class="col-sm-16">
                                <input type="text" size="40" id="HashedUsername" name="HashedUsername" value="" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="HashedPassword" class="col-sm-8 control-label">Hashed Password</label>
                            <div class="col-sm-16">
                                <input type="text" size="40" id="HashedPassword" name="HashedPassword" value="" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-primary" onclick="generatePassword(); return false;">Generate</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

}

@section foot {

    <script src="~/js/legacy/passpack-v1.1.js"></script>

    <script type="text/javascript">

        function generatePassword() {
            $('#HashedUsername').attr('value', Passpack.utils.hashx($('#Username').val()));
            $('#HashedPassword').attr('value', Passpack.utils.hashx($('#Password').val()));
        }

        // The hash is now a full 64 char string
        function generatePassword64() {
            $('#HashedUsername').attr('value', Passpack.utils.hashx($('#Username').val(), false, true));
            $('#HashedPassword').attr('value', Passpack.utils.hashx($('#Password').val(), false, true));
        }

        $('#generate-form-dialog').modal();

    </script>

}
