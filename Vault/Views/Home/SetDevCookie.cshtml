@model SetDevCookieViewModel

@{
    ViewBag.Title = "Set Dev Cookie";
    ViewBag.BodyClass = "modal-open";
}

@section main {

    <div id="set-dev-cookie-form-dialog" class="modal in" style="display: block;">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <form id="generate-form" action="" method="post" class="form-horizontal">
                    <div class="modal-header">
                        <h4 class="modal-title">Set Dev Cookie</h4>
                    </div>
                    <div class="modal-body">
                        <p>Enter a username and password to put into the dev mode cookie:</p>
                        <div class="form-group">
                            <label for="Username" class="col-sm-8 control-label">Username</label>
                            <div class="col-sm-16">
                                <input type="text" size="40" id="Username" name="Username" value="" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Password" class="col-sm-8 control-label">Password</label>
                            <div class="col-sm-16">
                                <input type="text" size="40" id="Password" name="Password" value="" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-primary">Set Dev Cookie</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

}

@section foot {

    <environment include="Development">
        <script src="~/js/dist/setdevcookie.js" asp-append-version="true"></script>
    </environment>

    <environment include="Production">
        <script src="~/js/dist/setdevcookie.js" asp-append-version="true" integrity="sha512-kh4BJ4u5poeOvBMhPMldZG1SS4Xzt1NUp9mrAIjitGjnWkUsV9C4Zhh6Q4RnmAI+H5qRQ9UpkN6yVhYVFu0/Wg=="></script>
    </environment>

    <div class="modal-backdrop in"></div>

}
