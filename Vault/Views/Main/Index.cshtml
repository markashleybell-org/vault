@model dynamic

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@section main {

    @{Html.RenderPartial("_LoginForm", new LoginViewModel());}

    @{Html.RenderPartial("_StaticHtml");}
    
    @{Html.RenderPartial("_ClientTemplates");}

}

@section foot {

    <script type="text/javascript">
        var loginDialog = $('#login-form-dialog');
        loginDialog.modal({ keyboard: false, backdrop: 'static' });

        $(function () {
            Vault.init('@(Url.Action("Index", "Main", null))', false, @(System.Configuration.ConfigurationManager.AppSettings["DevMode"]));
        });
    </script>

}